@model StampedeMotor.Models.CarViewModel

@{
    ViewBag.Title = "Add Car";
}

<h2>Add Car</h2>

@using (Html.BeginForm("AddCar", "CarList", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
		<p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
	    <hr />
	    <div class="form-group">
		    @Html.Label("Make", new { @class = "control-label col-md-2" })
		    <div class="col-md-10">
			    @Html.DropDownListFor(x => x.SelectedMakeId, 
				    new SelectList(Model.Makes, "Value", "Text")
				    )
			    @Html.ValidationMessageFor(model => model.SelectedMakeId, "", new {@class = "text-danger"})
		    </div>
	    </div>
		
	    <div class="form-group">
		    @Html.Label("Model", new { @class = "control-label col-md-2" })
		    <div class="col-md-10">
			    @Html.DropDownListFor(x => x.SelectedModelId, 
				    new SelectList(Model.Models, "Value", "Text")
				    )
			    @Html.ValidationMessageFor(model => model.SelectedModelId, "", new {@class = "text-danger"})
		    </div>
	    </div>
	   
	    <div class="form-group">
		    @Html.Label("Image", new {@class = "control-label col-md-2"})
		    <div class="col-md-10">
			    <input type="file" id="file" name="fileUpload"/>
		    </div>
		    @Html.ValidationMessageFor(x => x.ImgBytes, "", new { @class = "text-danger" })
	    </div>
	    <div class="form-group">
		    @Html.LabelFor(model => model.Description, htmlAttributes: new {@class = "control-label col-md-2"})
		    <div class="col-md-10">
			    @Html.EditorFor(model => model.Description, new {htmlAttributes = new {@class = "form-control"}})
			    @Html.ValidationMessageFor(model => model.Description, "", new {@class = "text-danger"})
		    </div>
	    </div>

	    <div class="form-group">
		    @Html.LabelFor(model => model.Price, htmlAttributes: new {@class = "control-label col-md-2"})
		    <div class="col-md-10">
			    @Html.EditorFor(model => model.Price, new {htmlAttributes = new {@class = "form-control"}})
			    @Html.ValidationMessageFor(model => model.Price, "", new {@class = "text-danger"})
		    </div>
	    </div>

	    <div class="form-group">
		    <div class="col-md-offset-2 col-md-10">
			    <input type="submit" name="Create" value="Create" class="btn btn-default"/>
		    </div>
	    </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Home")
</div>
