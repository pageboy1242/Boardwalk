@model List<StampedeMotor.Models.Car>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Stampede Motors</h1>
    <p class="lead">Welcome to Stampede Motors! Home of Calgary's classiest cars.</p>
</div>

<div class="row">
	@foreach (var car in Model)
	{
		<div class="col-12 col-sm-6 col-lg-4">
			<h3>@car.Make.MakeName @car.CarModel.ModelName</h3>
			<p>@car.Price.ToString("C")</p>
			<p>
				@car.Description
			</p>

			@{
				var base64 = Convert.ToBase64String(car.Image);
				var imgSrc = String.Format("data:image/png;base64,{0}", base64);
			}
			<img src="@imgSrc" class="img-responsive"/>
		</div>
	}
</div>
<p><a href="~/CarList/AddCar" class="btn btn-default">Add Car</a></p>
